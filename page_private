            const primaryTrait = Object.keys(scores).reduce((a, b) => scores[a] > scores[b] ? a : b);
            const t = translations[state.lang];

            let analysis = `<div class="glass-card rounded-xl p-6 mb-6">`;
            analysis += `<h3 class="text-2xl font-bold gradient-text mb-4 text-center">تحليل شخصيتك الكامل</h3>`;
            
